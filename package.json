{
  "name": "@humblebee/honeycomb",
  "description": "Monorepository for @humblebee Open Source packages",
  "private": true,
  "license": "MIT",
  "author": {
    "name": "Humblebee AB",
    "email": "hello@humblebee.se",
    "url": "https://www.humblebee.se/"
  },
  "homepage": "https://github.com/wearehumblebee/honeycomb",
  "repository": {
    "type": "git",
    "url": "https://github.com/wearehumblebee/honeycomb.git"
  },
  "scripts": {
    "audit:all": "yarn audit && lerna exec --stream 'yarn audit'",
    "build": "lerna run --stream build",
    "build:example": "yarn workspace @humblebee/ts-react-example run build",
    "build:storybook": "yarn workspace @humblebee/storybook-react run build",
    "build:ui": "yarn workspace @humblebee/ui-react run build",
    "clean": "lerna run clean",
    "commit": "git-cz",
    "deploy:chromatic": "yarn workspace @humblebee/storybook-react run chromatic",
    "dev:example": "yarn workspace @humblebee/ts-react-example run dev",
    "dev:storybook": "yarn workspace @humblebee/storybook-react run dev",
    "dev:ui": "yarn workspace @humblebee/ui-react run dev",
    "lint": "lerna run --stream lint",
    "lint:fix": "lerna run --stream lint:fix",
    "prepare": "lerna run --stream prepare && husky install",
    "test": "lerna run --stream test"
  },
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/eslint-parser": "^7.15.0",
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@emotion/eslint-plugin": "^11.2.0",
    "@testing-library/jest-dom": "^5.14.0",
    "@testing-library/react": "^12.0.0",
    "@theme-ui/presets": "^0.10.0",
    "@types/react": "^17.0.15",
    "@types/react-dom": "^17.0.9",
    "@types/testing-library__jest-dom": "^5.14.1",
    "@typescript-eslint/eslint-plugin": "^4.29.0",
    "@typescript-eslint/parser": "^4.29.0",
    "babel-jest": "^27.0.0",
    "commitizen": "^4.2.0",
    "cross-env": "^7.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.0",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-jest-dom": "^3.9.0",
    "eslint-plugin-jsx-a11y": "^6.3.0",
    "eslint-plugin-mdx": "^1.14.0",
    "eslint-plugin-prettier": "^3.3.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^7.0.0",
    "jest": "^27.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^11.1.0",
    "microbundle": "^0.13.0",
    "prettier": "^2.3.0",
    "prettier-eslint": "^13.0.0",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "rimraf": "^3.0.0",
    "theme-ui": "^0.10.0",
    "ts-jest": "^27.0.0",
    "typescript": "^4.3.0"
  },
  "workspaces": [
    "examples/*",
    "packages/*"
  ]
}
