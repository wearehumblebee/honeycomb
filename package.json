{
  "name": "@humblebee/honeycomb",
  "description": "Monorepository for @humblebee Open Source packages",
  "private": true,
  "license": "MIT",
  "author": {
    "name": "Humblebee AB",
    "email": "hello@humblebee.se",
    "url": "https://www.humblebee.se/"
  },
  "homepage": "https://github.com/wearehumblebee/honeycomb",
  "repository": {
    "type": "git",
    "url": "https://github.com/wearehumblebee/honeycomb.git"
  },
  "scripts": {
    "audit:all": "yarn audit && lerna exec --stream 'yarn audit'",
    "build": "lerna run --stream build",
    "build:example": "lerna run --stream --scope @humblebee/ts-react-example build",
    "build:storybook": "lerna run --stream --scope @humblebee/storybook-react build",
    "build:ui": "lerna run --stream --scope @humblebee/ui-react build",
    "chromatic:deploy": "lerna run --stream --scope @humblebee/storybook-react chromatic",
    "commit": "git-cz",
    "dev:example": "lerna run --stream --scope @humblebee/ts-react-example dev",
    "dev:storybook": "lerna run --stream --scope @humblebee/storybook-react dev",
    "dev:ui": "lerna run --stream --scope @humblebee/ui-react dev",
    "lint": "lerna run --stream lint",
    "lint:fix": "lerna run --stream lint:fix",
    "prepare": "lerna run --stream prepare",
    "test": "lerna run --stream test"
  },
  "devDependencies": {
    "@babel/core": "^7.13.0",
    "@babel/eslint-parser": "^7.13.0",
    "@commitlint/cli": "^12.0.0",
    "@commitlint/config-conventional": "^12.0.0",
    "@emotion/eslint-plugin": "^11.2.0",
    "@testing-library/jest-dom": "^5.11.0",
    "@testing-library/react": "^11.2.0",
    "@theme-ui/presets": "^0.7.0",
    "@types/jest": "^26.0.20",
    "@types/react": "^16.14.0",
    "@types/react-dom": "^16.9.12",
    "@types/testing-library__jest-dom": "^5.9.5",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "babel-jest": "^26.6.0",
    "commitizen": "^4.2.0",
    "cross-env": "^7.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-jest-dom": "^3.1.0",
    "eslint-plugin-jsx-a11y": "^6.3.0",
    "eslint-plugin-mdx": "^1.8.0",
    "eslint-plugin-prettier": "^3.3.0",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.2.0",
    "jest": "^26.6.0",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.0",
    "microbundle": "^0.13.0",
    "prettier": "^2.2.0",
    "prettier-eslint": "^12.0.0",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "rimraf": "^3.0.0",
    "theme-ui": "^0.7.0",
    "ts-jest": "^26.5.0",
    "typescript": "^4.2.0"
  },
  "workspaces": [
    "examples/*",
    "packages/*"
  ]
}
