{
  "name": "@humblebee/honeycomb",
  "description": "Monorepository for @humblebee Open Source packages",
  "private": true,
  "license": "MIT",
  "author": {
    "name": "Humblebee AB",
    "email": "hello@humblebee.se",
    "url": "https://www.humblebee.se/"
  },
  "homepage": "https://github.com/wearehumblebee/honeycomb",
  "repository": {
    "type": "git",
    "url": "https://github.com/wearehumblebee/honeycomb.git"
  },
  "scripts": {
    "audit:all": "yarn audit && lerna exec --stream 'yarn audit'",
    "build": "lerna run --stream build",
    "build:ui": "lerna run --stream build --scope @humblebee/ui-react",
    "build:storybook": "lerna run --stream build --scope @humblebee/storybook-react",
    "commit": "git-cz",
    "dev:ui": "lerna run --stream dev --scope @humblebee/ui-react",
    "dev:storybook": "lerna run --stream dev --scope @humblebee/storybook-react",
    "format": "lerna run --stream format",
    "postinstall": "lerna bootstrap",
    "test": "lerna run --stream test"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "commitizen": "^4.1.2",
    "cz-conventional-changelog": "^3.2.0",
    "husky": "^4.2.5",
    "lerna": "^3.22.1",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5"
  },
  "resolutions": {
    "dot-prop": ">=5.1.1",
    "lodash": ">=4.17.19",
    "minimist": ">=1.2.3"
  },
  "workspaces": [
    "examples/*",
    "packages/*"
  ]
}
