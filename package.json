{
  "name": "@humblebee/honeycomb",
  "description": "Monorepository for @humblebee Open Source packages",
  "private": true,
  "license": "MIT",
  "author": {
    "name": "Humblebee AB",
    "email": "hello@humblebee.se",
    "url": "https://www.humblebee.se/"
  },
  "homepage": "https://github.com/wearehumblebee/honeycomb",
  "repository": {
    "type": "git",
    "url": "https://github.com/wearehumblebee/honeycomb.git"
  },
  "scripts": {
    "audit:all": "yarn audit && lerna exec --stream 'yarn audit'",
    "build": "lerna run --stream build",
    "build:example": "yarn workspace @humblebee/ts-react-example run build",
    "build:storybook": "yarn workspace @humblebee/storybook-react run build",
    "build:ui": "yarn workspace @humblebee/ui-react run build",
    "clean": "lerna run --stream clean",
    "commit": "git-cz",
    "deploy:chromatic": "yarn workspace @humblebee/storybook-react run chromatic",
    "dev:example": "yarn workspace @humblebee/ts-react-example run dev",
    "dev:storybook": "yarn workspace @humblebee/storybook-react run dev",
    "dev:ui": "yarn workspace @humblebee/ui-react run dev",
    "fresh": "yarn run clean && lerna clean && rimraf node_modules",
    "lint": "lerna run --stream lint",
    "lint:fix": "lerna run --stream lint:fix",
    "prepare": "lerna run --stream prepare && husky install",
    "test": "lerna run --stream test"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/eslint-parser": "^7.16.0",
    "@commitlint/cli": "^16.0.0",
    "@commitlint/config-conventional": "^16.0.0",
    "@emotion/eslint-plugin": "^11.7.0",
    "@emotion/react": "^11.7.0",
    "@mdx-js/react": "^1.6.22",
    "@testing-library/jest-dom": "^5.16.0",
    "@testing-library/react": "^12.1.0",
    "@theme-ui/presets": "^0.13.0",
    "@types/react": "^17.0.15",
    "@types/react-dom": "^17.0.11",
    "@types/testing-library__jest-dom": "^5.14.2",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "babel-jest": "^27.4.0",
    "commitizen": "^4.2.0",
    "cross-env": "^7.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.0",
    "eslint-plugin-jest": "^25.3.0",
    "eslint-plugin-jest-dom": "^4.0.0",
    "eslint-plugin-jsx-a11y": "^6.5.0",
    "eslint-plugin-mdx": "^1.16.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^7.0.0",
    "jest": "^27.4.0",
    "lerna": "^4.0.0",
    "lint-staged": "^12.1.0",
    "microbundle": "^0.14.0",
    "prettier": "^2.5.0",
    "prettier-eslint": "^13.0.0",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "rimraf": "^3.0.0",
    "theme-ui": "^0.13.0",
    "ts-jest": "^27.1.0",
    "typescript": "^4.5.0"
  },
  "workspaces": [
    "examples/*",
    "packages/*"
  ]
}
