{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react-jsx",
    "jsxImportSource": "theme-ui",
    "noEmit": true,
    "paths": {
      "src": ["src/"],
      "src/*": ["src/*"],
      "tests": ["tests/"],
      "tests/*": ["tests/*"]
    },
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["dist", "reports"]
}
